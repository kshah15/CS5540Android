<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kishan.newsapp.MainActivity">

    <EditText

        android:id="@+id/news_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search for news"
        android:textSize="22sp" />

    <TextView

        android:id="@+id/news_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Click search and your URL will show up here!"
        android:textSize="22sp" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/news_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="20sp" />
    </ScrollView>

    <ProgressBar

        android:id="@+id/load_indi"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_width="42dp"
        android:layout_height="42dp" />
</LinearLayout>